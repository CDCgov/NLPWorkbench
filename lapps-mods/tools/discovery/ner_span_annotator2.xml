<tool id='discovery.ner_span_annotator.2' name='Span Annotator (Text Box)' version='1.0.0'>
    <description>Span-based annotator</description>
    <command interpreter="lsd">ner_span_annotator2.lsd $annotations $input $output</command>
    <inputs>
        <param name='annotations' type='text' format='txt' size="10x40" area="True" label='Annotations' />
        <param name='input' type='data' format='lif' label='input' />
    </inputs>
    <outputs>
        <data name='output' format='lif'/>
    </outputs>
    <help><![CDATA[
Enter one annotation per line in the format:

*start*, *end*, *type*

Where the *type* can be any string
]]>
    </help>
</tool>
